    <exprreq message="You must have the Mark of Hospitality to use this item."><![CDATA[hero.tagis[Dragonmark.Hospitalit] <> 0]]></exprreq>
    </thing>
  <thing id="ioS2CoWiBo" name="Collar of the Wild Bond" description="This leather collar is studded with small dragonshards attuned to the Mark of Handling. Each {i}collar of the wild bond{/i} has an associated key - a small dragonshard embedded in a metal disk. A character with the {i}dominate animal{/i} ability of the lesser Mark of Handling can use the disk to dominate the creature that is wearing the collar. This does not require the character to expend the power of his mark, and the duration lasts for as long as the target creature continues to wear the collar and remains in range. The maximum range of the effect is 100 feet + 10 feet per character level." compset="Wondrous" summary="Use {i}dominate animal{/i} for ever wears the collar.">
    <fieldval field="gCost" value="5000"/>
    <fieldval field="iCL" value="5"/>
    <usesource source="S2Eberron"/>
    <tag group="Helper" tag="EquipAvail"/>
    <tag group="Helper" tag="EquipMag"/>
