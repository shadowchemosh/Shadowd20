    </thing>
  <thing id="tm3PMFSSkD" name="Skeleton, Decrepit" description="These skeletons are so ancient that the magic that binds them is beginning to fail. They are often missing parts of their bodies, such as an arm or a number of ribs. Some even lack legs and instead must crawl about. Decrepit skeletons cannot be intentionally created.\n\n{b}Challenge Rating{/b}: As a normal skeleton - 1.\n\n{b}Armor Class{/b}: As a normal skeleton, but reduce the natural armor bonus by 1 (minimum 0).\n\n{b}Defensive Abilities{/b}: As a normal skeleton, except a decrepit skeleton gains DR 5/bludgeoning or slashing instead of DR 5/bludgeoning.\n\nAbilities: As a normal skeleton, but its Charisma score is reduced to 8.\n\nSpecial Qualities: A decrepit skeleton frequently is missing various parts that impair its function. Roll 1d10 and consult the following table.\n\n1 - 5: No missing parts.\n\n6 - 7: Missing one arm. The skeleton only gets one claw attack or weapon attack and can&apos;t use two-handed weapons.\n\n8 - 9: Missing a number of bones all over its body. It loses DR 5/bludgeoning or slashing.\n\n10: Missing one or both legs. It takes a - 4 penalty to Dexterity and its speed is reduced to 5 feet. It cannot take a 5-foot step." compset="Template" uniqueness="unique">
    <fieldval field="tmCHA" value="-2"/>
    <fieldval field="tmAC" value="-1"/>
    <arrayval field="tmCRArray" index="0" value="-1"/>
    <usesource source="srcMoFoSke"/>
    <tag group="ClVaryName" tag="Prepend"/>
    <tag group="TemplHelp" tag="Acquired"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <tag group="TemplHelp" tag="Inherited"/>
    <bootstrap thing="xxDRBlOrSl">
      <autotag group="SpecSource" tag="tm3PMFSSkD"/>
      <autotag group="Value" tag="5"/>
      </bootstrap>
    <bootstrap thing="rc3PDMFSOA">
      <autotag group="SpecSource" tag="tm3PMFSSkD"/>
      </bootstrap>
    <bootstrap thing="rc3PDMFSOB">
      <autotag group="SpecSource" tag="tm3PMFSSkD"/>
      </bootstrap>
    <bootstrap thing="rc3PDMFSOL">
      <autotag group="SpecSource" tag="tm3PMFSSkD"/>
      </bootstrap>
    <eval phase="First"><![CDATA[
      ~ find the copy of Damage reduction Bludgeoning added by the skeleton template disable and delete it
      var searchexpr as string
      searchexpr = "SpecSource.tmSkeleton & thingid.xDamRdB"
      perform hero.findchild[Ability,searchexpr].assign[Helper.SpcDisable]
      perform hero.findchild[Ability,searchexpr].delete[Helper.ShowSpec]]]></eval>
    <eval phase="First" index="6"><![CDATA[
      ~ find the copy of missing one arm added by our decrepit skeleton template renable and show it
      var searchexpr as string
      searchexpr = "SpecSource.tm3PMFSSkD & thingid.xxDRBlOrSl"
      perform hero.findchild[Ability,searchexpr].delete[Helper.SpcDisable]
      perform hero.findchild[Ability,searchexpr].assign[Helper.ShowSpec]]]></eval>
    <eval phase="PreLevel" priority="10001" index="2"><![CDATA[
      ~if we've been added to a skeleton, force the value on our CHA to 8
      if (hero.tagis[Template.tmSkeleton] <> 0) then
        hero.child[aCHA].field[aNormForce].value = 8
      endif]]></eval>
    <eval phase="First" index="7"><![CDATA[
      ~find the copy of Damage reduction Bludgeoning and slashing added by our decrepit skeleton template renable and show it
      var searchexpr as string
      searchexpr = "SpecSource.tm3PMFSSkD & thingid.rc3PDMFSOA"
      perform hero.findchild[Ability,searchexpr].delete[Helper.SpcDisable]
      perform hero.findchild[Ability,searchexpr].assign[Helper.ShowSpec]]]></eval>
    <eval phase="First" priority="600" index="3"><![CDATA[
      field[livename].text = "Decrepit"]]>
      <before name="Template Name Modification"/>
      </eval>
    <eval phase="First" index="8"><![CDATA[
      ~find the copy of missing a number of bones added by our decrepit skeleton template renable and show it
      var searchexpr as string
      searchexpr = "SpecSource.tm3PMFSSkD & thingid.rc3PDMFSOB"
      perform hero.findchild[Ability,searchexpr].delete[Helper.SpcDisable]
      perform hero.findchild[Ability,searchexpr].assign[Helper.ShowSpec]]]></eval>
    <eval phase="First" priority="550" index="5"><![CDATA[
      hero.childfound[tmSkeleton].field[livename].text = "Skeleton, Decrepit"
      hero.childfound[tmSkelCham].field[livename].text ="Skeletal Champion, Decrepit"]]></eval>
    <eval phase="First" index="9"><![CDATA[
      ~ find the copy of missing one or both legs added by our decrepit skeleton template renable and show it
      var searchexpr as string
      searchexpr = "SpecSource.tm3PMFSSkD & thingid.rc3PDMFSOL"
      perform hero.findchild[Ability,searchexpr].delete[Helper.SpcDisable]
      perform hero.findchild[Ability,searchexpr].assign[Helper.ShowSpec]]]></eval>
    <exprreq message="Skeleton or Skeletal Champion Template required."><![CDATA[hero.tagis[Template.tmSkeleton] + hero.tagis[Template.tmSkelCham] <> 0]]></exprreq>
    </thing>
  <thing id="rc3PDMFSOA" name="Missing one arm" description="Missing one arm. The skeleton only gets one claw attack or weapon attack and can&apos;t use two-handed weapons." compset="RaceCustom">
    <fieldval field="actName" value="Missing one arm"/>
