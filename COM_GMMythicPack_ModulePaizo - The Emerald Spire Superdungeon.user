    <tag group="ClsAllowSp" tag="spCreaDem8"/>
    <tag group="ClsAllowSp" tag="spEarthqu8"/>
    <tag group="KnowMySpl" tag="spEarthqu8"/>
    <tag group="KnowMySpl" tag="spFlesto6"/>
    <tag group="KnowMySpl" tag="spDisinte6"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <tag group="KnowMySpl" tag="spTerrafo7"/>
    <tag group="KnowMySpl" tag="spMoveEar6"/>
    <tag group="ClsAllowSp" tag="spMoveEar6"/>
    <tag group="KnowMySpl" tag="spFly3"/>
    <tag group="Helper" tag="HDCastLev"/>
    <tag group="Helper" tag="NoPathSoc"/>
    <eval phase="PreLevel" priority="10000"><![CDATA[
      ~ If no spell tags get out now!
      doneif (tagcount[ClsAllowSp.?] = 0)

      var spells as string
      ~ Create the spell list once as we need to use it several times
      spells = tagids[ClsAllowSp.?,"|"]

      ~ Set the allowed list of spells
      field[cfgAllwSp1].text = "component.BaseSpell & (" & tagids[ClsAllowSp.?,"|"] & ")"

      ~ If no mythic spells then get out now!
      doneif (tagcount[KnowMySpl.?] = 0)

      ~ Set mythic spell tags on hero
      perform hero.pushtags[KnowMySpl.?]

      ~ Find any spells selected on this configurable and make them mythic
      foreach pick in hero from BaseSpell where "KnowMySpl.cfgCBOXiSp & (" & tagids[KnowMySpl.?,"|"] & ")"
        perform eachpick.assign[Helper.Mythic]
        perform eachpick.assign[Helper.ActMythSpl]
      nexteach]]></eval>
    <eval phase="Render" priority="99999" index="2"><![CDATA[
      ~ If we can still add spells show a x of x message
      If (field[cfgSpenSp1].value > field[cfgMaxSp1].value) Then
        field[cfgAdTxSp1].text = "Add new Spells (" & field[cfgSpenSp1].value & " of " & field[cfgMaxSp1].value & ")"
      ~..If we can't add anymore just show the amount of spells
      Else
        field[cfgAdTxSp1].text = "Spells (" & field[cfgSpenSp1].value & " of " & field[cfgMaxSp1].value & ")"
      Endif]]></eval>
    </thing>

