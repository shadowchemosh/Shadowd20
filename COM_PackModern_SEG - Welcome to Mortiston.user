  <thing id="trMPSCESvC" name="Savannah Child" description="Pick one of the following skills: Handle Animal, Knowledge (nature), or Ride. You gain a +1 trait bonus on that skill, and it is always a class skill for you." compset="Trait" summary="+1 to Handle Animal checks, Handle Animal is always a class skill for you." uniqueness="unique">
    <fieldval field="usrCandid1" value="thingid.skHandleAn|thingid.skKnowNat|thingid.skRide"/>
    <usesource source="MPScrEyeG"/>
    <tag group="trCategory" tag="Regional" name="Regional" abbrev="Regional"/>
    <eval phase="PreLevel"><![CDATA[     
      ~ If we're disabled, do nothing
      doneif (tagis[Helper.FtDisable] <> 0)

      call fTargetFoc
      doneif (state.isfocus = 0)

      ~make our chosen skill a class skill
      var focusskill as string
      focusskill = "ClassSkill." & focus.idstring
      perform hero.assignstr[focusskill]

      ~add 1 to our chosen skill
      #applybonus[BonTrait,focus,1]

      ~change our summary depending on the skill chosen
      field[abSumm].text = "+1 to " & focus.field[name].text & " checks, " & focus.field[name].text & " is always a class skill for you."]]></eval>
    </thing>
