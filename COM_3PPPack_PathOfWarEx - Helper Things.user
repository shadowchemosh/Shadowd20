  <thing id="zPWSlpGods" name="Sleeping Goddess" compset="Simple">
    <usesource source="srcPOWEx"/>
    <tag group="PathOfWar" tag="selDisc"/>
    <tag group="Discipline" tag="SlpGoddess"/>
    <tag group="HasMan" tag="SlpGoddess"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <tag group="ClassSkill" tag="skPUAhypno"/>
    <tag group="wFtrGroup" tag="BladeHeavy"/>
    <tag group="wFtrGroup" tag="Monk"/>
    <tag group="wFtrGroup" tag="Spears"/>
    <tag group="wFtrGroup" tag="Flails"/>
    <tag group="wFtrGroup" tag="WPMndBld"/>
    <eval phase="First" priority="50">~ Setup the Discipline Class Skill
      Call PWsetupDSk</eval>
    <eval phase="First" priority="10500" index="2"><![CDATA[      ~ Find out how many Sleeping Goddess maneuvers (including stances) we have, and stop if it's zero
      var numMans as number
      numMans = tagcount[mLevel.?]
      doneif (numMans = 0)

      ~ Make the hero psionic, if they're not already
      call SetHeroPsi

      ~ Increase our total amount of Power Points by the level of our highest-level Sleeping Goddess maneuver, plus one for every SG maneuver beyond the first
      #resmax[resPowerPt] += tagmax[mLevel.?] + (numMans - 1)]]></eval>
    </thing>
