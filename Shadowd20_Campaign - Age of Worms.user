  <thing id="irS2PosEnF" name="Ring of Positive Energy Focus" description="{i}This is a product of Thassilonian times and the magic to create these can NO longer be duplicated.{/i}\n\nThis ring increases the amount of healing you receive from positive sources. When you receive healing that comes from a positive energy source like {i}Cure Light Wounds{/I} or a cleric&apos;s Channel Energy ability you receive 1 additional hit point per die used. In example a witch using a {I}Cure Light Wounds{/I} spell heals you for 5 points would actually heal you for 6.  If a cleric&apos;s Channel Energy was to affect you with 2d6 you would receive 2 additional points of healing." compset="Ring" summary="This ring increases the amount of healing you recieve from poitive sources by 1 point.">
    <fieldval field="gCost" value="500"/>
    <fieldval field="iCL" value="1"/>
    <usesource source="srcAoW"/>
    <tag group="iSchool" tag="Conjur"/>
    <tag group="Helper" tag="ShowSpec"/>
    </thing>
  <thing id="arS2HotD" name="Hunter of the Dead" description="Undead are a scourge upon the living. The hunter of the dead believes that that all undead must be eradicated as just one reckless night-feeder can turn an entire city into a den of undead.\n\nHunter of the dead use their skills and magic to track and slay the hungry dead, walking a fine line between the purity of good magic and the tempting evil of turning dark necromancy against the unliving. Rare even in grim Ustalav, and slain on sight in Nidal and Geb, hunter of the deads lead lonely existences under the constant threat of becoming that which they live to destroy." compset="ClassVary" uniqueness="unique">
    <usesource source="srcAoW"/>
    <tag group="ClVaryName" tag="AppParen"/>
    <tag group="AbReplace" tag="cInqDetAli"/>
    <tag group="AbModify" tag="cInqBane"/>
    <bootstrap thing="cInqS2UndB">
      <autotag group="ClSpecWhen" tag="5"/>
      </bootstrap>
    <bootstrap thing="cInqS2DetU">
      <autotag group="ClSpecWhen" tag="2"/>
      </bootstrap>
    <bootstrap thing="cInqS2SunS">
      <autotag group="ClSpecWhen" tag="5"/>
      </bootstrap>
    <bootstrap thing="cInqS2OaU">
      <autotag group="ClSpecWhen" tag="1"/>
      </bootstrap>
    <link linkage="varies" thing="cHelpInq"/>
    <eval phase="PreLevel" priority="5500" index="2"><![CDATA[~Post-levels 5500
hero.child[cInqJSmiti].field[usrCandid1].text = ""]]></eval>
    <eval phase="PostLevel" priority="11000"><![CDATA[~ Post-Levels 11000
foreach pick in hero where "thingid.cInqJSmiti & ClSpecWhen.6"
   eachpick.field[listname].text = "Judgement of Smiting: Magic, Silver"
nexteach

foreach pick in hero where "thingid.cInqJSmiti & ClSpecWhen.10"
   eachpick.field[listname].text = "Judgement of Smiting: Magic, Silver, Adamantine"
nexteach

 if (hero.child[cHelpInq].field[cClrTurn].value < 0) then
   hero.child[cInqJSmiti].field[livename].text = "Judgement of Profane Smiting"
 elseif (hero.child[cHelpInq].field[cClrNeutGE].value > 0) then
   hero.child[cInqJSmiti].field[livename].text = "Judgement of Profane Smiting"
 else
   hero.child[cInqJSmiti].field[livename].text = "Judgement of Sacred Smiting"
 endif
 hero.child[cInqJSmiti].field[livename].text &= " (Magic"
 if (hero.child[cInqJSmiti].field[xCount].value >= 2) then
   hero.child[cInqJSmiti].field[livename].text &= ", Silver"
 endif
 if (hero.child[cInqJSmiti].field[xCount].value >= 3) then
   hero.child[cInqJSmiti].field[livename].text &= ", Adamantine"
 endif
 hero.child[cInqJSmiti].field[livename].text &= ")"]]></eval>
    </thing>
