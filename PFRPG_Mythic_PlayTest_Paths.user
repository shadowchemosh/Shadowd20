    <usesource source="srcMythicP"/>
    <tag group="AbilType" tag="Extra"/>
    <tag group="SpecSource" tag="arPTChampi"/>
    <tag group="Helper" tag="Secondary"/>
    </thing>
  <thing id="cChsFleeCh" name="Fleet Charge" description="You can expend one use of mythic power to move up to your speed as a swift action. At any point during this movement, you can make a single melee or ranged attack at your highest attack bonus (in addition to any other attacks you might make this round), adding your champion tier as an insight bonus on the attack roll. Damage from this attack bypasses damage reduction." compset="CustomSpec" uniqueness="unique">
