  <thing id="raCBFavTer" name="Favored Terrain" description="Creature gains a +2 bonus on initiative checks and Knowledge (geography), Perception, Stealth, and Survival skill checks when it is in specified terrain. A Creature traveling through his favored terrain normally leaves no trail and cannot be tracked (though he may leave a trail if he so chooses)." compset="RaceSpec" summary="Gain bonuses in specified terrain">
    <fieldval field="abText" value="in"/>
    <fieldval field="abValue" value="2"/>
    <tag group="User" tag="NeedDomain"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="AbilType" tag="Extra"/>
    <bootstrap thing="skKnowGeog"></bootstrap>
    <eval phase="Final" priority="10000"><![CDATA[~ abValue specifies bonus
~ abText is "in", can be set to other prepositions

var bon as number
bon = field[abValue].value

var locTxt as string
locTxt = "+" & bon & " " & field[abText].text & " " & field[domDomain].text

field[livename].text = field[name].text & " (+" & bon & ")"

#racialsituational[hero.child[Initiative],locTxt,field[name].text]
#racialsituational[hero.child[skKnowGeog],locTxt,field[name].text]
#racialsituational[hero.child[skPercep],locTxt,field[name].text]
#racialsituational[hero.child[skStealth],locTxt,field[name].text]
#racialsituational[hero.child[skSurvival],locTxt,field[name].text]]]></eval>
    </thing>
