  <thing id="rcuWtcEvlE" name="Evil Eye" description="The witch can cause doubt to creep into the mind of a foe within 30 feet that she can see. The target takes a &#150;2 penalty on one of the following (witch's choice): AC, ability checks, attack rolls, saving throws, or skill checks. This hex lasts for a number of rounds equal to 3 + the witch's Intelligence modifier. A Will save reduces this to just 1 round. This is a mind-affecting effect. At 8th level the penalty increases to &#150;4." compset="RaceCustom" summary="Foe in 30 ft takes penalty to your choice of AC, attacks, saves, ability or skill checks (Will part)." uniqueness="unique">
    <tag group="AllowRCust" tag="cfguWtchHx"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="SpecType" tag="Attack"/>
    <tag group="StandardDC" tag="aINT"/>
    <tag group="HasAbility" tag="cWitEvilEy"/>
    <tag group="SpecSource" tag="cHelpWit"/>
    <eval phase="Render" priority="10000"><![CDATA[
      ~ If we're not shown, just get out now
      doneif (tagis[Helper.ShowSpec] = 0)
      
      ~ If we're disabled, do nothing
      doneif (tagis[Helper.SpcDisable] <> 0)

      ~ get total HD plus witch levels
      var wtchLvl as number
      wtchLvl = hero.child[rcuHexHelp].field[abValue].value
      
      ~ Scarred Witch changes this to use CON instead of INT
      if (#hasarchetype[arWitScarr] <> 0) then
        field[abDuration].value += 3 + #attrbonus[aCON]
      else
        field[abDuration].value += 3 + #attrbonus[aINT]
        endif
      
      if (wtchLvl >= 8) then
        field[abValue].value -= 4
      else
        field[abValue].value -= 2
        endif
      
      field[livename].text &= " " & field[abValue].value & " (" & field[abDuration].value & " round(s))"]]></eval>
    <eval phase="Final" priority="10005" index="2"></eval>
    </thing>
  <thing id="rcuWtcFerS" name="Feral Speech" description="This hex grants the witch the ability to speak with and understand the response of any animal as if using {i}speak with animals{/i}, though each time she uses the hex, she must decide to communicate with either amphibians, birds, fish, mammals, or reptiles, and can only speak to and understand animals of that type. The witch can make herself understood as far as her voice carries. This hex does not predispose any animal so addressed toward the witch in any way. At 12th level, the witch can use this hex to communicate with vermin." compset="RaceCustom">
    <tag group="AbilType" tag="Super"/>
    <tag group="HasAbility" tag="cWitFerSpe"/>
    <tag group="AllowRCust" tag="cfguWtchHx"/>
    <tag group="SpecSource" tag="cHelpWit"/>
    </thing>
  <thing id="rcuWtcFlig" name="Flight" description="The witch grows lighter as she gains power, eventually gaining the ability to fly. At 1st level, the witch can use {i}feather fall{/i} at will and gains a +4 racial bonus on Swim checks. At 3rd level, she can cast {i}levitate{/i} once per day. At 5th level, she can {i}fly{/i}, as per the spell, for a number of minutes per day equal to her level. These minutes do not need to be consecutive, but they must be spent in 1-minute increments. This hex only affects the witch." compset="RaceCustom" uniqueness="unique">
    <tag group="AbilType" tag="Super"/>
    <tag group="Helper" tag="SpecUp"/>
    <tag group="AllowRCust" tag="cfguWtchHx"/>
    <tag group="HasAbility" tag="cWitFlight"/>
    <tag group="SpecSource" tag="cHelpWit"/>
    <tag group="Custom" tag="hexLevitat" name="Hex: Flight - Levitate"/>
    <tag group="Custom" tag="hexFly" name="Hex: Flight - Fly"/>
    <bootstrap thing="rcuWtcLevi">
      <containerreq phase="First" priority="500">hero#Custom.hexLevitat</containerreq>
      </bootstrap>
    <bootstrap thing="rcuWtcFly">
      <containerreq phase="First" priority="500">hero#Custom.hexFly</containerreq>
      </bootstrap>
    <bootstrap thing="rcuWtcFetF"></bootstrap>
    <eval phase="First" priority="450"><![CDATA[
      ~ assign tags for flight abilities
      var effLvl as number
      effLvl = hero.child[cfguWtchHx].field[cfgLevel].value

      if (effLvl >= 3) then
        perform hero.assign[Custom.hexLevitat]
      endif

      if (effLvl >= 5) then
        perform hero.assign[Custom.hexFly]
      endif]]></eval>
    </thing>
