  <thing id="rcuWtcChar" name="Charm" description="A witch can charm an animal or humanoid creature within 30 feet by beckoning and speaking soothing words. This improves the attitude of an animal or humanoid creature by 1 step, as if the witch had successfully used the Diplomacy skill. The effect lasts for a number of rounds equal to the Witch's Intelligence modifier. A Will save negates this effect. Whether or not the save is successful, a creature cannot be the target of this hex again for 1 day. At 8th level, this effect improves the attitude of the target creature by 2 steps. This is a mind-affecting charm effect." compset="RaceCustom" summary="Improve attitudes by 1 step." uniqueness="unique">
    <tag group="AllowRCust" tag="cfguWtchHx"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="StandardDC" tag="aINT"/>
    <tag group="HasAbility" tag="cWitCharm"/>
    <tag group="SpecSource" tag="cHelpWit"/>
    <eval phase="Render" priority="10000"><![CDATA[
      ~ If we're not shown, just get out now
      doneif (tagis[Helper.ShowSpec] = 0)
      
      ~ If we're disabled, do nothing
      doneif (tagis[Helper.SpcDisable] <> 0)

      ~ get total HD plus witch levels
      var wtchLvl as number
      wtchLvl = hero.child[rcuHexHelp].field[abValue].value
      
      ~ Scarred Witch changes this to use CON instead of INT
      if (#hasarchetype[arWitScarr] <> 0) then
        field[abDuration].value += #attrbonus[aCON]
      else
        field[abDuration].value += #attrbonus[aINT]
        endif
      
      if (wtchLvl >= 8) then
        field[abValue].value += 2
      else
        field[abValue].value += 1
        endif
      
      field[livename].text &= " +" & field[abValue].value & " (" & field[abDuration].value & " round(s))"
      
      field[abSumm].text = "Improve attitude of humanoid or animal in 30 ft by " & field[abValue].value & " step(s)."]]></eval>
    <eval phase="Final" priority="10005" index="2">
      ~ override DC
      var v_level as number
      v_level = hero.child[rcuHexHelp].field[abValue].value

      call overrideDC</eval>
    </thing>
  <thing id="rcuWtcCldS" name="Child-Scent" description="The witch gains the scent ability, but only with respect to humanoid children and immature animals. Thus, she could sniff out a child&apos;s hiding place or a den of wolf pups, but not the child&apos;s parents or the den mother." compset="RaceCustom" uniqueness="unique">
    <tag group="AbilType" tag="Extra"/>
    <tag group="HasAbility" tag="cWitChildS"/>
    <tag group="AllowRCust" tag="cfguWtchHx"/>
    <tag group="SpecSource" tag="cHelpWit"/>
    </thing>
  <thing id="rcuWicCove" name="Coven" description="The witch counts as a hag for the purpose of joining a hag's coven. In addition, whenever the witch with this hex is within 30 feet of another witch with this hex, she can use the aid another action to grant a +1 bonus to the other witch's caster level for 1 round. This bonus applies to the witch's spells and all of her hexes." compset="RaceCustom" summary="Count as a hag to form covens, and aid another can increase coven witch&apos;s CL." uniqueness="unique">
    <tag group="AbilType" tag="Extra"/>
    <tag group="HasAbility" tag="cWitCoven"/>
