  <thing id="raUACMnk" name="AC Bonus" description="When unarmored and unencumbered, the creature adds his Wisdom bonus (if any) to his AC and his CMD. In addition, a monk gains a +1 bonus to AC and CMD at 4HD. This bonus increases by 1 for every four monk levels thereafter, up to a maximum of +5 at 20 HD.\n\nThese bonuses to AC apply even against touch attacks or when the creature  is flat-footed. He loses these bonuses when he is immobilized or helpless, when he wears any armor, when he carries a shield, or when he carries a medium or heavy load." compset="RaceSpec">
    <tag group="AbilType" tag="Extra"/>
    <tag group="SpecType" tag="Defense"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <eval phase="PostAttr" priority="9999"><![CDATA[      ~ Get our encumbrance level - if we're encumbered by that, or if we're wearing
      ~ armor or shield, we're disabled.
      if (hero.tagis[Encumbered.Light] = 0) then
        perform assign[Helper.SpcDisable]
        done
        endif

      ~only run the rest for the first copy
~      doneif (tagis[Helper.FirstCopy] = 0)


      ~if we have a class-based monk bonus, add our value to it
~      if (hero.tagis[Ability.cACMnk] <> 0) then
~        hero.childfound[cACMnk].field[abValue].value += field[abValue].value
      ~otherwise, show us
~      else
~        perform assign[Helper.ShowSpec]
~        endif


~      field[abValue].value += #attrbonus[aWIS] + field[xCount].value - 1

var ACBonus as number
ACBonus = (herofield[tHitDice].value + #levelcount[Monk] - herofield[tLevel].value) / 4

ACBonus = round(ACBonus,0,-1)

      field[abValue].value += #attrbonus[aWIS] + ACBonus  


      field[livename].text = "AC Bonus +" & field[abValue].value]]>
      <after name="Encumber Final"/>
      </eval>
    </thing>
  <thing id="raUFastMov" name="Fast Movement" description="The creature gains an enhancement bonus to his land speed. If it is wearing armor or carrying a medium or heavy load loses this extra speed." compset="RaceSpec">
    <usesource source="PathCurse"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <eval phase="PostAttr" priority="10000"><![CDATA[
      var bonus as number
      var bonuslevel as number

      bonuslevel = (herofield[tHitDice].value + #levelcount[Monk] - herofield[tLevel].value) / 3

      bonuslevel = round(bonuslevel,0,-1)
      bonus = bonuslevel * 10

      ~ Get our encumbrance level - if we're encumbered by that, or if we're wearing
      ~ armor or shield, we're disabled.
      if (hero.tagis[Encumbered.Light] = 0) then
        perform assign[Helper.SpcDisable]
        done
        endif

      field[abValue].value += bonus
      field[livename].text = field[thingname].text & " (+" & field[abValue].value & "')"

      #enhancementbonus[container.child[Speed], field[abValue].value]]]>
      <after name="Encumber Final"/>
      </eval>
    </thing>
  <thing id="raUMnkUnar" name="Unarmed Strike" description="At 1st level, the creature gains Improved Unarmed Strike as a bonus feat. A monk&apos;s attacks may be with fist, elbows, knees, and feet. This means that a monk may make unarmed strikes with his hands full. There is no such thing as an off-hand attack for a monk striking unarmed. A monk may thus apply his full Strength bonus on damage rolls for all his unarmed strikes." compset="RaceSpec">
    <usesource source="PathCurse"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <eval phase="PostLevel" priority="9999"><![CDATA[var levels as number
 
levels = herofield[tHitDice].value + #levelcount[Monk] - herofield[tLevel].value

      ~ Get our unarmed strike pick, delete the damage tag from it, and assign
      ~ a new damage tag.
      var dice as string
      perform hero.child[wUnarmed].delete[wMain.?]
      if (levels < 4) then
        perform hero.child[wUnarmed].assign[wMain.1d6_5]
        dice = "1d6"
      elseif (levels < 8) then
