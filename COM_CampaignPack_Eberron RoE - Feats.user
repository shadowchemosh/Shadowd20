    <bootstrap thing="raSTrazorc">
      <containerreq phase="First" priority="400">Custom.ShifterRC</containerreq>
      </bootstrap>
    <eval phase="First" priority="10000" index="2">doneif (field[usrChosen1].ischosen = 0)
      perform field[usrChosen1].chosen.pulltags[Custom.?]</eval>
    <eval phase="PreLevel" priority="10000"><![CDATA[
      ~ If we're disabled, do nothing
      doneif (tagis[Helper.FtDisable] <> 0)

      ~ Set the Shifter Feat Tag on the hero
