  <thing id="cuUWCorr2" name="Dark Blessing" description="You apply your Charisma modifier (if positive) as a profane bonus on all saving throws. Multiple instances of this ability do not stack." compset="ClSpecial" summary="Gain bonus to all saves equal to your CHA modifier">
    <usesource source="srcBookFnd"/>
    <tag group="SpecType" tag="Defense"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <tag group="AbilType" tag="Super"/>
    <eval phase="PostAttr" priority="10000"><![CDATA[~ If we're disabled, do nothing
      doneif (tagis[Helper.SpcDisable] <> 0)

var chaMod as number
chaMod = maximum(hero.child[aCHA].field[aModBonus].value,0)

#applybonus[BonProfane,hero.child[svFort],chaMod]
#applybonus[BonProfane,hero.child[svRef],chaMod]
#applybonus[BonProfane,hero.child[svWill],chaMod]]]></eval>
    </thing>
  <thing id="cuUWCorr3" name="Dark Host" description="You gain immunity to all diseases, including supernatural and magical diseases." compset="ClSpecial">
    <usesource source="srcBookFnd"/>
