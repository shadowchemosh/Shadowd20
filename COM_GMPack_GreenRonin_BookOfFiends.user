  <thing id="cuUWAir3" name="Cold Resistance" description="In a 24-hour period, you ignore an amount of cold damage equal to your level times your Charisma modifier. This resistance stacks with other forms of cold resistance." compset="ClSpecial">
    <fieldval field="actName" value="Cold Resistance"/>
    <usesource source="srcBookFnd"/>
    <tag group="Helper" tag="ClExLose"/>
    <tag group="SpecType" tag="Defense"/>
    <tag group="User" tag="Tracker"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <tag group="AbilType" tag="Super"/>
    <eval phase="Final" priority="10000"><![CDATA[~ If we're disabled, do nothing
      doneif (tagis[Helper.SpcDisable] <> 0)

~ determine amount of cold damage we can ignore per day
var mxCld as number
mxCld = #totallevelcount[] * (hero.child[aCHA].field[aModBonus].value)

field[trkMax].value = maximum(mxCld,0)

var curVal as number
curVal = maximum(mxCld,0)- field[trkUser].value

field[livename].text = "Cold Resistance (" & curVal & ")"

if (curVal <= 0) then
  perform assign[Hide.Special]
endif]]></eval>
    </thing>
  <thing id="cuUWGftDrk" name="Gift of Darkness" description="Beginning at 6th level, the unholy warrior gains a spell-like ability from his dark masters. For every three unholy warrior levels afterwards on the character gains an extra use per week of his gift of darkness. Gifts of darkness vary depending on selected domains. The unholy warrior may only select one gift of darkness from those offered by the selected domains." compset="ClSpecial">
    <fieldval field="usrCandid1" value="Custom.dwGift"/>
    <usesource source="srcBookFnd"/>
    <tag group="ChooseSrc1" tag="Hero"/>
    <tag group="AbilType" tag="SpellLike"/>
    <tag group="Custom" tag="DarkGift" name="Gift of Darkness"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <tag group="Helper" tag="ClExLose"/>
    <eval phase="PostLevel" priority="1000"><![CDATA[~ If we're disabled, do nothing
      doneif (tagis[Helper.SpcDisable] <> 0)

~get out if gift of darkness is not granted yet
    doneif (#levelcount[UnholyWar] < 6)

~ If we haven't chosen anything, get out now
      doneif (field[usrChosen1].ischosen + tagis[Target.?] = 0)

var pickStr as string
pickStr = field[usrChosen1].chosen.idstring

foreach pick in hero where "Custom.DarkGift & !thingid.cuUWGftDrk"
  var rootStr as string
  rootStr = eachpick.root.idstring
  if (compare(rootStr,pickStr) = 0) then
     perform eachpick.delete[Hide.Spell]

     var uses as number
     uses = (#levelcount[UnholyWar]/3) - 1
     eachpick.field[trkMax].value = round(uses,0,-1)

      if (#levelcount[UnholyWar] = 20) then
         perform eachpick.tagreplace[Usage.Week,Usage.Day]
      endif

  endif
