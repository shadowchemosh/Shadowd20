  <thing id="cMPAHIFTLw" name="I fought the Law" description="You can emit a 30-foot aura of protection for a number of rounds per day equal to your level. You and your allies within this aura gain a +1 deflection bonus to AC and saves. The deflection bonus increases by +1 for every four levels vs. lawful based creatures." compset="ClSpecial" summary="30&apos;r aura grants a +1 deflection bonus to AC vs. lawful based creatures">
    <comment/>
    <usesource source="D20Arcana"/>
    <usesource source="GRCMP2tMP3"/>
    <usesource source="GRCMP2MSR"/>
    <tag group="SpecType" tag="Defense" name="Defense" abbrev="Defense"/>
    <tag group="Usage" tag="DayRound" name=" rounds/day" abbrev=" rounds/day"/>
    <tag group="AbilType" tag="Super" name="Supernatural Ability" abbrev=" (Su)"/>
    <tag group="ChargeCalc" tag="LevelFull"/>
    <tag group="User" tag="Tracker"/>
    <tag group="ChargeCalc" tag="LevelX1"/>
    <tag group="User" tag="Activation" name="Activation" abbrev="Activation"/>
    <eval phase="PostLevel" priority="10000"><![CDATA[      var bonus as number
      bonus = field[xAllLev].value / 4
      bonus = maximum(round(bonus,0,-1), 1)
      field[abValue].value += bonus

      var bonus as number
      bonus = maximum(round(field[xTotalLev].value / 4,0,-1),1)

      field[abSumm].text = "30' aura vs lawful creatures" & " and a +" & field[abValue].value & " deflection bonus to AC and saves."
      if (field[abilActive].value <> 0) then
        ~Add our bonus to AC
        #applybonus[tACDeflect, hero.child[ArmorClass], field[abValue].value]
hero.child[svFort].field[Bonus].value += field[abValue].value
hero.child[svRef].field[Bonus].value += field[abValue].value
hero.child[svWill].field[Bonus].value += field[abValue].value
        endif]]></eval>
    </thing>
  <thing id="cMPAHEncSm" name="Rock and Roll" description="You gain a +2 enhancement bonus on Bluff, Diplomacy, and Intimidate skill checks. This bonus increases by +1 for every five levels you possess, up to a maximum of +6 at 20th level. At 20th level, whenever you succeed at a saving throw against a spell of the enchantment school, that spell is reflected back at its caster, as per {i}spell turning{/i}." compset="ClSpecial" summary="Gain bonuses to Bluff, Diplomacy and Intimidate. Turn enchantment spells.">
    <comment/>
    <usesource source="D20Arcana"/>
    <usesource source="GRCMP2tMP3"/>
    <usesource source="GRCMP2MSR"/>
    <tag group="Helper" tag="SpecUp" name="SpecUp" abbrev="SpecUp"/>
    <tag group="SpInfo" tag="spSpelTur6" name="Spell Turning" abbrev="Spell Turning"/>
    <tag group="AbilType" tag="Super" name="Supernatural Ability" abbrev=" (Su)"/>
    <eval phase="PostLevel" priority="10000"><![CDATA[
      field[abValue].value += 2 + round(field[xAllLev].value / 5, 0, -1)

      #enhancementbonus[hero.child[skBluff], field[abValue].value]
      #enhancementbonus[hero.child[skDiplo], field[abValue].value]
      #enhancementbonus[hero.child[skIntim], field[abValue].value]

      if (field[xAllLev].value >= 20) then
        perform delete[Helper.SpecUp]
        field[abSumm].text = "When you save vs. an enchantment spell, it is turned against its caster as {i}spell turning{/i}."
        endif]]></eval>
    </thing>
  <thing id="cMPAHMetal" name="METAL!!!" description="You fill your enemies with fear and doubt. Each affected creature who can hear you takes a -1 penalty on attack rolls and a -1 penalty on saving throws against fear effects." compset="ClSpecial" summary="{b}\m/{/b}: Enemies that can hear you take: -1 Attack and -1 vs Fear">
