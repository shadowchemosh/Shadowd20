      <autotag group="ClSpecWhen" tag="3"/>
      </bootstrap>
    <eval phase="First" priority="375">linkage[table].field[cArcFStart].value = 1</eval>
    <eval phase="Final" priority="100000" index="2"><![CDATA[
      doneif (hero.childlives[cArcFamil] = 0)

      var nametext as string
      nametext = hero.child[cArcFamil].minion.actorname
      
      nametext = splice(nametext,hero.child[cArcFamil].minion.findchild[BaseRace].field[name].text,", ")
      
