    <usesource source="D20Arcana"/>
    <tag group="SpecSource" tag="arMPAIntrn"/>
    <tag group="Helper" tag="Secondary"/>
    <eval phase="PostAttr" priority="10000"><![CDATA[
field[abValue].value += round(hero.child[skSpellcr].field[skRanks].value/4,0,-1)

      field[livename].text = "Know Thyself +" & field[abValue].value
      field[abSumm].text = "+" & field[abValue].value & "-When crafting a spell with the range of Personal"]]></eval>
    </thing>
  <thing id="cMPAOverdr" name="Overdrive" description="By investing 1 Hero Point, the Intrinsic-Crafter can temporarily boost a single ability score by 4 points. This enhancement will last for 1 minute per CL. When the boost wears off, the Crafter will need to make a Fortitude Saving Throw (DC 15), to avoid being Fatigued." compset="CustomSpec" uniqueness="unique">
