    <usesource source="APGTrait"/>
    <usesource source="WebTraits"/>
    <tag group="trCategory" tag="PathSecond"/> 
    <tag group="ProductId" tag="HLCommunit"/> 
    <eval phase="PreLevel" priority="5000">
      #applybonus[BonTrait,hero.childfound[skBluff],1]
      #makeclassskill[skBluff]</eval>
    </thing>
