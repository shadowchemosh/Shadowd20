field[abValue].value += 1

if (hero.tagis[Activated.fArcStrike] <> 0) then
   hero.child[Damage].field[tDamBonus].value += field[abValue].value
   hero.child[Attack].field[Bonus].value += field[abValue].value
endif]]></eval>
    <exprreq message="Arcane Strike feat required."><![CDATA[#hasfeat[fArcStrike] <> 0]]></exprreq>
    <prereq message="Mythic Feats can only be taken from a Mythic tab not from the Feats tab.">
