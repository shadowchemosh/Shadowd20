    <tag group="StandardDC" tag="BAB"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <prereq message="Soulknife Level 8+ required">
      <validate><![CDATA[
        var classcheck as string
        var levels as number

        classcheck = "Soulknife"

        call PUPreReqs

        validif (levels >= 8)]]></validate>
      </prereq>
    </thing>
  <thing id="cSknBSResT" name="Resounding Thunder" description="When the soulknife expends his psionic focus to stagger an enemy via the Thunder Blade blade skill, he gains an additional benefit. If the target ends its next turn adjacent to the soulknife, it takes 2d6+2 sonic damage. The soulknife must have the thunder blade blade skill to select this blade skill." compset="CustomSpec" summary="If the target ends its next turn adjacent to the soulknife, it takes 2d6+2 sonic damage." uniqueness="useronce">
    <usesource source="pPsiUn"/>
    <tag group="SpecSource" tag="cHelpSkn"/>
    <tag group="abCategory" tag="PUBladeSk"/>
    <tag group="NotClExpr" tag="cHelpPUA"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <exprreq message="Thunder Blade Blade Skill required."><![CDATA[#hasability[cSknBSThuB] <> 0]]></exprreq>
    </thing>
  <thing id="cSknBSTowM" name="Tower Mind Shield" description="The soulknife&apos;s mind shield can be shaped into a tower shield. Altering the mind shield in this fashion is a move action that does not provoke attacks of opportunity. The mind shield remains in this form until shaped back into its standard form. The mind shield is treated in all ways (except visually) as a masterwork tower shield, granting a +4 shield bonus to AC, imposing a +2 Maximum Dexterity Bonus, a -9 Armor Check penalty, and a 50% Arcane Spell Failure Chance. The soulknife must have the Mind Shield blade skill to select this blade skill." compset="CustomSpec" uniqueness="useronce">
    <usesource source="pPsiUn"/>
    <tag group="SpecSource" tag="cHelpSkn"/>
    <tag group="abCategory" tag="PUBladeSk"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <bootstrap thing="shMTowShld">
      <containerreq phase="First" priority="100">!ClassVary.arPUShldBl</containerreq>
      </bootstrap>
    <eval phase="First" priority="99"><![CDATA[
      ~ Need to get our ability tag to the hero earlier
      ~ than the LW scripts push it. &
      perform hero.pushtags[Ability.?]]]></eval>
    <exprreq message="Mind Shield Blade Skill required."><![CDATA[#hasability[cSknBSMShl] <> 0]]></exprreq>
    </thing>
  <thing id="cSknBSTSSk" name="Tower Shield Skill" description="The soulknife reduces the attack and armor check penalties by 1 (to a minimum of 0) if his mind shield is in tower shield form. The soulknife may take this blade skill multiple times, its effects stack. The soulknife must have the mind shield blade skill and the ability to shape his mind shield into a tower shield to choose this blade skill." compset="CustomSpec">
    <fieldval field="abValue" value="1"/>
    <usesource source="pPsiUn"/>
    <tag group="abCategory" tag="PUBladeSk"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <tag group="SpecSource" tag="cHelpSkn"/>
    <eval phase="PreLevel" priority="1000" name="Apply Tower Shield Skill"><![CDATA[
      ~ if we've been disabled, get out now
      doneif (tagis[Helper.SpcDisable] <> 0)

      ~ Only proceed if the Mind Tower Shield found
      perform hero.childfound[shMTowShld].setfocus
      doneif (state.isfocus = 0)

      ~ Set the ability tag onto the Tower Mind Shield
      perform focus.pushtags[Ability.?]]]></eval>
    <exprreq message="Mind Shield Blade Skill required."><![CDATA[#hasability[cSknBSMShl] <> 0]]></exprreq>
