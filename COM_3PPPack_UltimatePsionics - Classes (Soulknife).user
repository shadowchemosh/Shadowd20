    <tag group="Helper" tag="ActivMenu"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <bootstrap thing="iPUEmpStr"></bootstrap>
    <eval phase="PostLevel" priority="10000"><![CDATA[
      ~ If we're not shown, just get out now
      doneif (tagis[Helper.ShowSpec] <> 1)
      ~ if we've been disabled, get out now
      doneif (tagis[Helper.SpcDisable] <> 0)

      ~ The following should only happen once on the first copy
      doneif (tagis[Helper.FirstCopy] = 0)

      perform hero.childfound[iPUEmpStr].setfocus
      doneif (state.isfocus = 0)

      ~ Set base damage of Empowered Strikes to 1d6
      perform focus.tagreplace[wMain.1d3,wMain.1d6]

      ~ Set to do lethal damage
      perform focus.delete[wSpecial.Nonlethal]

      ~ Remove damage type
      perform focus.delete[wType.?]

      ~ Bludgeoning
      if (field[usrIndex].value = 0) then
        perform focus.assign[wType.B]
      ~ Piercing
      elseif (field[usrIndex].value = 1) then
        perform focus.assign[wType.P]
      ~ Slashing
      elseif (field[usrIndex].value = 2) then
        perform focus.assign[wType.S]
      endif]]></eval>
    </thing>
