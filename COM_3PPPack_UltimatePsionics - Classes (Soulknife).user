    <tag group="HasAbility" tag="cSknEnhMB"/>
    <tag group="ProductId" tag="HLCommunit"/>
    </thing>
  <thing id="cSknPUFeTr" name="Feral Transformation" description="At 3rd level, the feral heart gains the ability to unleash his inner beast. By expending his psionic focus as a free action, the feral heart’s body takes on a more bestial form, granting him a +2 morale bonus to Strength and Dexterity and to Intimidate checks, but suffering a -2 penalty to Intelligence, Wisdom, and Charisma. This effect can be used for a number of rounds per day equal to 8 + the feral heart’s Constitution modifier and can dismissed as a free action. At each level after 3rd, the feral heart can use this ability for 2 additional rounds per day. Temporary increases to Constitution, such as those gained from powers like {i}animal affinity{/i}, do not increase the total number of rounds that this ability can be used per day.\n\nWhile under the effect of feral transformation, the feral heart cannot gain psionic focus or use any Charisma-, Dexterity-, or Intelligence-based skills (except Acrobatics, Fly, Intimidate, and Ride) or any ability that requires patience or concentration.\n\nAt 10th level, the bonuses increase to +4. At 16th level, the bonuses increase to +6.\n\nThis ability replaces psychic strike." compset="ClSpecial" summary="+2 Str, +2 Dex, +2 Intimidate checks, -2 Int, -2 Wis, -2 Cha while feral.">
    <comment>abValue = Bonus; abValue2 = Penalty</comment>
    <fieldval field="abValue" value="2"/>
    <fieldval field="abValue2" value="-2"/>
    <fieldval field="trkMax" value="8"/>
    <fieldval field="actName" value="Feral Transformation"/>
    <tag group="User" tag="Activation"/>
    <tag group="User" tag="Tracker"/>
    <tag group="LGClSpcAss" tag="Rage"/>
    <tag group="SpecGroup" tag="ExRageTarg"/>
    <tag group="SpecType" tag="Attack"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="abAction" tag="PUExpFocus"/>
    <tag group="ChargeAttr" tag="aCON"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <tag group="ChargeCalc" tag="0AttributM"/>
    <tag group="ChargeCalc" tag="AttrOnly"/>
    <tag group="Usage" tag="DayRound"/>
    <eval phase="PostLevel" priority="15000"><![CDATA[
      ~ If we're not shown, just get out now
      doneif (tagis[Helper.ShowSpec] <> 1)
      ~ if we've been disabled, get out now
      doneif (tagis[Helper.SpcDisable] <> 0)

      ~ Increase bonus at level 10 and 16
      field[abValue].value *= field[xCount].value
      field[livename].text = field[thingname].text & " (" & signed(field[abValue].value) & ", " & signed(field[abValue2].value) & ")"
      field[abSumm].text = signed(field[abValue].value)& " Str, " & signed(field[abValue].value) & " Dex, " & signed(field[abValue].value)& " Intimidate checks, " & signed(field[abValue2].value) & " Int, " & signed(field[abValue2].value) & " Wis, " & signed(field[abValue2].value) & " Cha while feral."


      ~ The following should only happen once on the first copy
      doneif (tagis[Helper.FirstCopy] = 0)

      ~ Increase duration by 2 rounds for each level after 3
      field[trkMax].value += 2 * (field[xTotalLev].value - 3)

      ~ If not activated get out now!
      doneif (field[abilActive].value = 0)

      ~ Give bonuses
      #applybonus[BonMorale,hero.child[aSTR],field[abValue].value]
      #applybonus[BonMorale,hero.child[aDEX],field[abValue].value]
      #applybonus[BonMorale,hero.child[skIntim],field[abValue].value]

      ~ Give penalties
      hero.child[aINT].field[Penalty].value += field[abValue2].value
      hero.child[aWIS].field[Penalty].value += field[abValue2].value
      hero.child[aCHA].field[Penalty].value += field[abValue2].value]]></eval>
    </thing>
  <thing id="cSknPUQuSh" name="Quick Shift" description="At 5th level, the feral heart gains the quick shift blade skill. If he already has the quick shift blade skill, he can instead choose another blade skill. This ability replaces quick draw." compset="ClSpecial" summary="Gain Quick Shift blade skill for free.">
