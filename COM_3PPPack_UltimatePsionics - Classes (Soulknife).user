      Endif

      ~ Tell flurry weapons to display an extra attack
      perform hero.assign[Hero.FlurryAtk]</eval>
    </thing>
  <thing id="cSknBSFFIm" name="Flurry of Fists, Improved" description="The soulknife gains an additional attack when using flurry of fists, but at a -5 penalty. The soulknife must be at least 6th level and have the Improved Unarmed Strike feat and the Flurry of Fists blade skill in order to select this blade skill." compset="CustomSpec" summary="Extra unarmed strike at a -5 penalty." uniqueness="useronce">
