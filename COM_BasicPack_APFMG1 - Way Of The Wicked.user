    <tag group="ProductId" tag="HLCommunit"/>
    <tag group="Helper" tag="ShowSpec"/>
    <bootstrap thing="skProfSold"></bootstrap>
    <eval phase="PreLevel" priority="5000"><![CDATA[
	  ~ Lets make Profession(Soldier) a class skill
      #makeclassskill[skProfSold]

      ~ Now lets add a skill point per level to Profession(Soldier)
      field[abValue].value = #totallevelcount[]
      #resmax[resSkill] += field[abValue].value
      #skillinnate[skProfSold] += field[abValue].value]]></eval>
    <exprreq message="You may only have a single Crimes trait."><![CDATA[hero.tagcount[trCategory.Crimes] <= 1]]></exprreq>
    </thing>
