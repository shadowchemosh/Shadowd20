    <link linkage="varies" thing="cHelpMnkUn"/>
    <eval phase="Render" priority="999999999" index="2"><![CDATA[
      ~ If not correctly linked to our class get out now!
      doneif (islinkage[varies] = 0)

      ~ Try and shorten the list of possible feats down as far as we can so remove
      ~ Teamwork and Style combat feats.
      linkage[varies].field[cSBonFtExp].text = "!Helper.Helper & !fCategory.Teamwork & !fCategory.Style & !fCategory.Critical & !fCategory.Perform & !fCategory.Panache & (fCategory.Combat|fIncSec.fCustom)"]]></eval>
    <eval phase="PostLevel" priority="11000"><![CDATA[
      ~ If not correctly linked to our class get out now!
      doneif (islinkage[varies] = 0)

      ~ Lets remove the normal monk bonus feats
      perform linkage[varies].delete[BonusFor.Monk1]
      perform linkage[varies].delete[BonusFor.Monk6]
      perform linkage[varies].delete[BonusFor.Monk10]
      perform linkage[varies].delete[BonusFor.Monk14]

      ~ Bonus Style feats do not need to meet Pre-Reqs
      perform linkage[varies].assign[Helper.BonFtNoPre]

      ~ We do need to meet the Pre-Req of Elemental Fist
      linkage[varies].field[cBonFtTxt].text ="{b}Note:{/b} You must meet the prerequisites of the Elemental Fist feat. But this is not tracked by HL correctly right now. So do not add Elemental Fist feat unless you meet the prerequisites."

      if (linkage[varies].field[cTotalLev].value >= 6) then
        ~ Give note why we include all combat feats for wildcard feats
        linkage[varies].field[cSBonFtTxt].text ="{b}Note:{/b} This list includes all combat feats as only showing child style feats would block custom & 3PP style feats from showing. This way future books and 3PP books are fully supported in this list."
        ~ Secondary feats equal to Max value minus number of bonus feats taken
        linkage[varies].field[cSBonFtMax].value += linkage[varies].field[cBonFtMax].value - linkage[varies].field[cBonFtCur].value
        ~ Reduce bonus feats by the number of seconary taken
        linkage[varies].field[cBonFtCur].value += linkage[varies].field[cSBonFtCur].value
      endif]]></eval>
    </thing>
