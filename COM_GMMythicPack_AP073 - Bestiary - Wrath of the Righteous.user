    <arrayval field="usrArray" index="4" value="Pride"/>
    <arrayval field="usrArray" index="5" value="Sloth"/>
    <arrayval field="usrArray" index="6" value="Wrath"/>
    <usesource source="PathWraRig"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <tag group="User" tag="Activation"/>
