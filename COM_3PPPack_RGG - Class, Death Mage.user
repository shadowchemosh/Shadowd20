 value += round(field[xTotalLev].value/2, 0, -1)
 range += 25 + 5*value
 field[abDuration].value += value

 field[livename].text = field[thingname].text & " (" & field[abDuration].value & "r.)"
 field[abSumm].text = "Ranged touch attack (" & range & "ft.): target is {i}shaken{/i} for " & field[abDuration].value & " rounds."]]></eval>
