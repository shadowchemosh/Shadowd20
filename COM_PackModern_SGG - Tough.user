    <eval phase="First" priority="20000"><![CDATA[
      ~if we've been replaced, get out now
      doneif (tagis[Helper.SpcReplace] <> 0)

      foreach thing in BaseWep where "wFtrGroup.Axes"
        perform eachthing.pulltags[WepProf.?]
        nexteach

      perform hero.pushtags[WepProf.?]
      
      ~ Cycle through and apply the Helper.ExoticProf tag to all examples of 
      ~ the chosen weapon on the hero. This is important for the Aldori Dueling
      ~ Sword specifically, and possibly others.
      var searchexpr as string

      searchexpr = tagids[WepProf.?,"|"]

      foreach pick in hero from BaseWep where searchexpr
        perform eachpick.assign[Helper.ExoticProf]
        nexteach]]></eval>
    <eval phase="PostLevel" priority="10000" index="2"><![CDATA[    var damage as number
      damage = field[xTotalLev].value / 6
      field[abValue].value += maximum(round(damage,0,-1),1)

field[abSumm].text = "+" & field[abValue].value & "damage" 
field[livename].text = field[thingname].text & " +" & field[abValue].value 

foreach pick in hero from BaseWep where "wFtrGroup.Axes"
  eachpick.field[wDamBonus].value += field[abValue].value
  nexteach]]></eval>
    <eval phase="PreAttr" priority="10000" index="3">~ If weapons not found on the hero then we are done
doneif (hero.childlives[wGreataxe] = 0)

~ assign a new crit mult tag.
      var result as number
      
      result = hero.child[wGreataxe].delete[wCritMin.?]
      result = hero.child[wGreataxe].assign[wCritMin.19]</eval>
    <eval phase="PreAttr" priority="10000" index="4">~ If weapons not found on the hero then we are done
doneif (hero.childlives[wBardiche] = 0)

~ assign a new crit mult tag.
      var result as number
      
      result = hero.child[wBardiche].delete[wCritMin.?]
