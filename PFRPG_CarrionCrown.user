    <usesource source="PathCCrown"/>
    <tag group="gType" tag="Wonder"/>
    <tag group="iSchool" tag="Abjur"/>
    <tag group="Helper" tag="ArtiMinor"/>
    </thing>
  <thing id="iUmAnaKnif" name="Anatomist&apos;s Knife" description="{b}Base Weapon Type:{/b} Dagger\n\n{b}Description: {/b} This {i}+1 cunning* dagger{/i} inflicts 1 point of bleed damage on a critical hit or sneak attack; this stacks with any bleed damage the wielder inflicts from other abilities. The {i}anatomist&apos;s knife{/i} also grants a +2 bonus to Heal checks. *See {i}Advanced Player&apos;s Guide{/i}" compset="MagicWep" summary="This {i}+1 cunning* dagger{/i} inflicts 1 point of bleed damage on a critical hit or sneak attack">
