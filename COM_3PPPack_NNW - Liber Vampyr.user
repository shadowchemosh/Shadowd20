    <tag group="Helper" tag="ShowSpec"/>
    <tag group="AbilType" tag="Super"/>
    </thing>
  <thing id="abNNWDRMSv" name="Damage Reduction, Magic and Silver" description="You have Damage Reduction can only be overcome by weapons that are both Magic and Silver." compset="Ability" summary="DR only overcome by weapons that are both magic and silver" uniqueness="unique">
