    <eval phase="First" priority="1000">~ Add to speed
      hero.child[Speed].field[Bonus].value += 10</eval>
    </thing>
  <thing id="raNNWVryHS" name="Very-Hungry Senses" description="A very-hungry feral vampire&apos;s darkvision extends to 90 ft, and its low-light vision improves to allow it to see four times as far as a human in dim light" compset="RaceSpec" summary="Low-light vision improves to allow it to see four times as far">
