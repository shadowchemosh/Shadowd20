    <tag group="ChooseSrc1" tag="Hero"/>
    <eval phase="Final" priority="20000"><![CDATA[
~ If nothing chosen get out now!
doneif (field[usrChosen1].ischosen <> 1)

~ Add in our caster level
field[abValue].value += field[usrChosen1].chosen.field[cCasterLev].value
~ Add in our mythic tier
field[abValue].value += hero.tagcount[MythicPT.Rank]

~ Add in our mythic power ability score
If (hero.findchild[BaseClSpec,"thingid.cMytMtythP & ClSpecWhen.1 & MythicPT.a?"].tagis[MythicPT.aSTR] <> 0) Then
   field[abValue].value += #attrbonus[aSTR]
ElseIf (hero.findchild[BaseClSpec,"thingid.cMytMtythP & ClSpecWhen.1 & MythicPT.a?"].tagis[MythicPT.aDEX] <> 0) Then
   field[abValue].value += #attrbonus[aDEX]
ElseIf (hero.findchild[BaseClSpec,"thingid.cMytMtythP & ClSpecWhen.1 & MythicPT.a?"].tagis[MythicPT.aCON] <> 0) Then
   field[abValue].value += #attrbonus[aCON]
ElseIf (hero.findchild[BaseClSpec,"thingid.cMytMtythP & ClSpecWhen.1 & MythicPT.a?"].tagis[MythicPT.aINT] <> 0) Then
   field[abValue].value += #attrbonus[aINT]
ElseIf (hero.findchild[BaseClSpec,"thingid.cMytMtythP & ClSpecWhen.1 & MythicPT.a?"].tagis[MythicPT.aWIS] <> 0) Then
   field[abValue].value += #attrbonus[aWIS]
ElseIf (hero.findchild[BaseClSpec,"thingid.cMytMtythP & ClSpecWhen.1 & MythicPT.a?"].tagis[MythicPT.aCHA] <> 0) Then
   field[abValue].value += #attrbonus[aCHA]
Endif

~ Set the live name
field[livename].text = field[name].text & " (+" & field[abValue].value & " CMB)"]]></eval>
    </thing>
