    <eval phase="PreLevel" priority="4000">#skillinnate[skAcrobat] += 1
#skillinnate[skClimb] += 1
#skillinnate[skPercep] += 1
#skillinnate[skStealth] += 1
#skillinnate[skSwim] += 1
      <before name="Skill Bonus Feats"/>
