    <tag group="SpecType" tag="Sense"/>
    <tag group="AbilType" tag="Extra"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <tag group="Helper" tag="ShowSpec"/>
    <bootstrap thing="xImmFlank"></bootstrap>
    <bootstrap thing="raUncanny2"></bootstrap>
    <eval phase="PostLevel" priority="10000">perform hero.findchild[BaseRace].setfocus
doneif (state.isfocus = 0)

~ get base hd
var hd as number
hd = focus.tagcount[Hero.HitDice]

perform state.clearfocus

hero.child[raUncanny2].field[abValue].value = hd</eval>
    </thing>
  <thing id="rauSkWrFrA" name="Fear Aura" description="Skeleton warriors are shrouded in an aura of fear. Creatures with less than 5 HD and in a 30-foot radius must succeed on a Will save or be affected as though by fear cast by a caster of the skeleton warrior&apos;s levels." compset="RaceSpec" summary="Foes within radius are affected by the {i}fear{/i} spell.">
    <usesource source="srcTomeHor"/>
    <tag group="SpecType" tag="Aura" name="Aura" abbrev="Aura"/>
    <tag group="StandardDC" tag="aCHA" name="Charisma" abbrev="Charisma"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <tag group="Helper" tag="ShowSpec" name="Show Spec" abbrev="Show Spec"/>
    <eval phase="Final" priority="10000"><![CDATA[
      ~if nothing else has set the area, assume 30'
      if (field[abValue].value + tagmax[Value.?] = 0) then
        field[abValue].value = 30
        endif

      call CalcValue

      ~ Use our value field as the range of our aura
      field[livename].text = field[name].text & " (" & field[abValue].value & " feet)"]]></eval>
    </thing>
  <thing id="rauSkWrFdT" name="Find Target" description="A skeleton warrior can track and find the possessor of its circlet unerringly, as though guided by discern location. Using this ability, it can also find the last person to possess its circlet. Its caster level is equal to its total Hit Dice." compset="RaceSpec">
    <usesource source="srcTomeHor"/>
    <tag group="SpecType" tag="Attack"/>
    <tag group="AbilType" tag="SpellLike"/>
    <tag group="ProductId" tag="HLCommunit"/>
