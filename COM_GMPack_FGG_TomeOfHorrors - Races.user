    perform hero.childfound[raIncorpor].assign[Helper.SpcDisable]
    perform hero.childfound[raIncorpor].assign[Hide.Special]
    perform hero.childfound[xImmCrit].assign[Helper.SpcDisable]
    perform hero.childfound[xImmCrit].assign[Hide.Special]
    perform hero.childfound[xImmPrec].assign[Helper.SpcDisable]
    perform hero.childfound[xImmPrec].assign[Hide.Special]
  ~ add STR
    perform hero.child[aSTR].delete[Helper.NoScore]
    perform hero.child[aSTR].delete[NoScore.?]
    perform hero.child[aSTR].delete[AttrSub.aDEX]
  
 
  
endif</eval>
    <eval phase="PostAttr" priority="2000" index="2">if (field[abilActive].value = 0) then
  perform hero.child[mNatural].delete[Helper.NoArmor]
  ~ remove deflection bonus
      var bonus as number
      bonus = hero.child[aCHA].field[aModBonus].value
      bonus = maximum(bonus, 1)
      hero.child[ArmorClass].field[tACDeflect].value -= maximum(hero.child[ArmorClass].field[tACDeflect].value, bonus)
else
~ Set our natural armor bonus to +0 - must be added before PostAttr 5000
      perform hero.child[mNatural].assign[Helper.NoArmor]

      ~ Add our charisma bonus as a deflection bonus
      var bonus as number
      bonus = hero.child[aCHA].field[aModBonus].value
      bonus = maximum(bonus, 1)
      hero.child[ArmorClass].field[tACDeflect].value = maximum(hero.child[ArmorClass].field[tACDeflect].value, bonus)

endif</eval>
    </thing>
