    <fieldval field="actUserMin" value="0"/>
    <fieldval field="actUserMax" value="99"/>
    <usesource source="srcTomeHor"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="Helper" tag="UserAdjust"/>
    <tag group="SpecType" tag="Attack"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <eval phase="PostLevel" priority="2000">var fdPt as number
fdPt = field[actUser].value/3
fdPt = round(fdPt,0,-1)


      ~we gain various bonuses for each feedpoint applied
      hero.child[aSTR].field[Bonus].value += fdPt
      hero.child[aCON].field[Bonus].value += fdPt
      hero.child[ArmorClass].field[tACNatural].value += fdPt</eval>
    <eval phase="First" priority="10000" index="2">field[actUserMax].value = 3*(9 - hero.tagcount[Hero.HitDice])</eval>
    </thing>
