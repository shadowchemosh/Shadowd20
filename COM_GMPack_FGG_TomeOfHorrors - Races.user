  <thing id="rauRpHPois" name="Poison, Riptide Horror" compset="RaceSpec">
    <fieldval field="abValue" value="4"/>
    <fieldval field="abValue2" value="2"/>
    <fieldval field="abDuration" value="4"/>
    <usesource source="srcTomeHor"/>
    <tag group="StandardDC" tag="aCON"/>
    <tag group="ProductId" tag="HLCommunit"/>
