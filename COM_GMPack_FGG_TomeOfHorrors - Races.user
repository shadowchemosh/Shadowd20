  <thing id="rcuAdderPu" name="Adder, Puff" description="{b}CR:{/b} +0; {b}Poison:{/b} Bite-injury; {i}frequency{/i} 1/round for 6 rounds; {i}Save{/i} DC +3; {i}Effect{/i} 1d2 Con; {i}Cure{/i} 1 save." compset="RaceCustom">
