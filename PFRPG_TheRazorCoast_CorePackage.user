  <thing id="mecRazorCo" name="Razor Coast Mechanic" compset="Mechanics">
    <usesource source="CampRazorC"/>

    <tag group="wSpecial" tag="RCRake" name="Rake"/>
    <tag group="Target" tag="selEnFire" name="Fire"/>
    <tag group="Target" tag="selEnAcid" name="Acid"/>
    <tag group="Target" tag="selEnCold" name="Cold"/>
    <tag group="Target" tag="selEnElec" name="Electricity"/>
    <tag group="Target" tag="selEnSonic" name="Sonic"/>
    <tag group="ProductId" tag="FrogGod"/>
    <tag group="wSpecial" tag="RCBonusAC" name="Bonus to AC"/>
    <bootstrap thing="zFGDivNoDo"></bootstrap>
    <bootstrap thing="zFGDivDoma"></bootstrap>
    <bootstrap thing="zFGNonCast"></bootstrap>
    <eval phase="First" priority="200" index="2">
      ~ Assign new tags to energy selector Picks. This allows the Tikiman race to 
      ~ pull the tags directly off the type of energy was selected.
      perform hero.child[selEnAcid].assign[RazorCoast.TikEnAcid]
      perform hero.child[selEnCold].assign[RazorCoast.TikEnCold]
      perform hero.child[selEnElec].assign[RazorCoast.TikEnElec]
      perform hero.child[selEnFire].assign[RazorCoast.TikEnFire]
      perform hero.child[selEnSonic].assign[RazorCoast.TikEnSonic]
      perform hero.child[selEnAcid].assign[RazorCoast.TikImAcid]
      perform hero.child[selEnCold].assign[RazorCoast.TikImCold]
      perform hero.child[selEnElec].assign[RazorCoast.TikImElec]
      perform hero.child[selEnFire].assign[RazorCoast.TikImFire]
      perform hero.child[selEnSonic].assign[RazorCoast.TikImSonic]
      ~ Assign new Target Tags to the Energy to energy selector Picks.
      perform hero.child[selEnAcid].assign[Target.selEnAcid]
      perform hero.child[selEnCold].assign[Target.selEnCold]
      perform hero.child[selEnElec].assign[Target.selEnElec]
      perform hero.child[selEnFire].assign[Target.selEnFire]
      perform hero.child[selEnSonic].assign[Target.selEnSonic]</eval>
    <eval phase="First" priority="10000"><![CDATA[
      ~ If not human get out now
      doneif (#hasrace[rHuman] = 0)

      ~set our focus to the hero's race
      perform hero.findchild[BaseRace].setfocus
      doneif (state.isfocus = 0)
      ~ Give one Ethnicity
      focus.field[rGiveSpec].value = 1
      perform focus.assign[Helper.OptCustom]
      focus.field[rSpecName].text = "Ethnicities"]]></eval>
    </thing>
  <thing id="zFGDivDoma" name="Divine with Domain" compset="Simple">
    <tag group="RazorCoast" tag="SelDomain" name="Caster Domain Selector"/>
    <tag group="ProductId" tag="FrogGod"/>
    </thing>
  <thing id="zFGDivNoDo" name="Divine without Domain" compset="Simple">
    <tag group="RazorCoast" tag="SelDomain" name="Caster Domain Selector"/>
    <tag group="ProductId" tag="FrogGod"/>
    </thing>
  <thing id="zFGNonCast" name="Non-Spellcaster" compset="Simple">
    <tag group="RazorCoast" tag="SelDomain" name="Caster Domain Selector"/>
    <tag group="ProductId" tag="FrogGod"/>
    </thing>
