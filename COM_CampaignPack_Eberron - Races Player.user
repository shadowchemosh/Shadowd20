  <thing id="mS2IronBod" name="Ironwood Body" compset="Armor" holdable="no">
    <usesource source="srcRaOfEb"/>
    <tag group="ArmorCheck" tag="4"/>
    <tag group="ArmorArcFl" tag="20"/>
    <tag group="ArmorClass" tag="Light"/>
    <tag group="Helper" tag="AutoEquip"/>
    <tag group="ArmorAC" tag="3"/>
    <tag group="Helper" tag="NoPrereq"/>
    <tag group="Helper" tag="NoSelect" name="NoSelect" abbrev="NoSelect"/>
