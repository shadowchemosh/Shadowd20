    <eval phase="First" priority="499"><![CDATA[
~because custom class specials test their existnace at First/500, 
~they can't run a script before then
~however, we need to find out what shifter has been selected, so we
~know which set of abilities to add
~therefore, we make the check from the class, rather than the
~racial special, and forward that tag to the hero

if (hero.findchild[RaceAbil,"thingid.raShifting"].field[usrChosen1].ischosen <> 0) then
    perform hero.findchild[RaceAbil,"thingid.raShifting"].field[usrChosen1].chosen.forward[Shifter.?]
endif]]></eval>
    </thing>
  <thing id="raShifting" name="Shifting" description="A shifter can tap into her lycanthropic heritage to gain short bursts of physical power. A shifter can enter a state that is superficially similar to a barbarian’s rage. Each shifter has one of six shifter traits-characteristics that manifest themselves when a character is shifting. Each shifter trait provides a +2 bonus to one of the character’s physical ability scores (Strength, Dexterity, or Constitution) and grants some other advantage as well. Shifter traits are described in the following section.\n\nA shifter can shift for a number of rounds per day equal to 3 + Constitution modifier + half her character level. Starting a shift or ending is a free action that can only happen on a characters turn. Every shifter feat a character takes allows her to shift for 1 additional round per day.  For every two shifter feats a character takes, the shifter gains a bonus 1 round per day on top of the one gained for the shifter feat itself. In example if a shifter has two shifter feats they can shift for 3 additional rounds per day not 2." compset="RaceSpec">
    <fieldval field="usrCandid1" value="thingid.raSTbeasth|thingid.raSTcliffw| thingid.raSTdreams|thingid.raSTgorebu|thingid.raSTlongst|thingid.raSTlongto|thingid.raSTrazorc|thingid.raSTswiftw|thingid.raSTtruedi|thingid.raSTwildhu"/>
    <fieldval field="actName" value="Shifting"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="User" tag="Activation"/>
    <tag group="ChooseSrc1" tag="Thing"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="Usage" tag="DayRound"/>
    <tag group="User" tag="Tracker"/>
    <bootstrap thing="raSTgorebu">
      <containerreq phase="First" priority="500">Shifter.Gorebrute</containerreq>
      </bootstrap>
    <bootstrap thing="raSTswiftw">
      <containerreq phase="First" priority="500">Shifter.Swiftwing</containerreq>
      </bootstrap>
    <bootstrap thing="raSTtruedi">
      <containerreq phase="First" priority="500">Shifter.Truedive</containerreq>
      </bootstrap>
    <bootstrap thing="raSTlongto">
      <containerreq phase="First" priority="500">Shifter.Longtooth</containerreq>
      </bootstrap>
    <bootstrap thing="raSTrazorc">
      <containerreq phase="First" priority="500">Shifter.Razorclaw</containerreq>
      </bootstrap>
    <bootstrap thing="raSTbeasth">
      <containerreq phase="First" priority="500">Shifter.Beasthide</containerreq>
      </bootstrap>
    <bootstrap thing="raSTwildhu">
      <containerreq phase="First" priority="500">Shifter.Wildhunt</containerreq>
      </bootstrap>
    <bootstrap thing="raSTcliffw">
      <containerreq phase="First" priority="500">Shifter.Cliffwalk</containerreq>
      </bootstrap>
    <bootstrap thing="raSTdreams">
      <containerreq phase="First" priority="500">Shifter.Dreamsight</containerreq>
      </bootstrap>
    <bootstrap thing="raSTlongst">
      <containerreq phase="First" priority="500">Shifter.Longstride</containerreq>
      </bootstrap>
    <eval phase="Final" priority="10000">
      ~ We get a bonus of 1.5 rounds per shifter feat taken
      field[abValue].value += round(hero.tagcount[Shifter.Feat] * 1.5,0,-1)

      ~We get 3 + 1/2 Level + CON + Feats rounds of shift/day
      field[trkMax].value += 3 + round(herofield[tLevel].value/2,0,-1) + hero.child[aCON].field[aBonus].value + field[abValue].value</eval>
    <eval phase="First" index="2">
      ~ If we are not activated get out now
      doneif (field[abilActive].value = 0)

      ~ Set the shifting tag on to the hero
      perform hero.assign[Shifter.Shifting]</eval>
    </thing>
  <thing id="raShftAgil" name="Shifter Agility" description="A shifter’s animalistic heritage enhances many of her physical skills. Shifters gain a +2 racial bonus on Acrobatics, Climb, and Swim checks." compset="RaceSpec">
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="SpecType" tag="Skill"/>
    <eval phase="PreLevel" priority="10000"><![CDATA[
      ~ if we've been replaced, get out now
      doneif (tagis[Helper.SpcReplace] <> 0)

      ~ Give bonus to to Acrobatics, Climb, Swim
      #skillbonus[skAcrobat] += field[abValue].value
      #skillbonus[skClimb] += field[abValue].value
      #skillbonus[skSwim] += field[abValue].value]]></eval>
    <eval phase="First" index="2">
      ~ Set bonus to +2
      field[abValue].value += 2</eval>
    </thing>
  <thing id="raSTbeasth" name="Beasthide" description="While shifting, a beasthide shifter gains a +2 bonus to Constitution and natural armor that provides a +2 bonus to AC." compset="RaceSpec" summary="+2 Con and +2 AC when shifting.">
