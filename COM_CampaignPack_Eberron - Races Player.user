  <thing id="lS2Quor" name="Quori" description="Quor is a hissing, guttural tongue more suited to the alien forms of the quori than their humanoid hosts. It has its own written form, a flowing, elegant script with many circular letters." compset="Language" uniqueness="useronce">
    <usesource source="S2Eberron"/>
    </thing>
  <thing id="stS2Kalash" name="Kalashtar" compset="Subtype" uniqueness="unique">
    <usesource source="S2Eberron"/>
    <tag group="NeedType" tag="tpHumanoid"/>
    </thing>
  <thing id="raS2DualSp" name="Dual Spirts" description="The kalashtar&apos;s dual spirits help them resist spells that target their minds as such gain a +2 racial bonus on saving throws against mind-affecting spells and abilities, and possession." compset="RaceSpec" summary="+2 racial bonus vs mind-affecting spells and effects.">
    <tag group="Helper" tag="ShowSpec"/>
    <eval phase="Final" priority="50000"><![CDATA[
      ~ If we're disabled, do nothing
      doneif (tagis[Helper.SpcDisable] <> 0)

      #situational[hero.child[svAll],"+2 racial bonus vs mind-affecting spells and effects.",field[name].text]]]></eval>
    </thing>
  <thing id="raS2SocInt" name="Social Interaction" description="Kalashtar are masters of social interaction, influencing others through their commanding presence and subtle psychic powers and gain a +2 racial bonus on Bluff, Diplomacy, and Intimidate checks." compset="RaceSpec">
    <fieldval field="abValue" value="2"/>
    <tag group="SpecType" tag="Skill"/>
    <tag group="AbilType" tag="Extra"/>
    <tag group="Helper" tag="ShowSpec"/>
    <eval phase="PreLevel" priority="10000"><![CDATA[
      ~ If we're disabled, do nothing
      doneif (tagis[Helper.SpcDisable] <> 0)
      
      ~ Give a racial bonus to Bluff, Diplomacy, and Intimidate
      #racialbonus[skBluff] += field[abValue].value
      #racialbonus[skDiplo] += field[abValue].value
      #racialbonus[skIntim] += field[abValue].value]]></eval>
    </thing>
  <thing id="raS2HumLoo" name="Human Looking" description="Kalashtar have a close physical resemblance to humans and gain a +2 racial bonus on Disguise checks made to impersonate a human." compset="RaceSpec" summary="+2 racial bonus on Disguise checks made to impersonate a human.">
    <tag group="Helper" tag="ShowSpec"/>
    <eval phase="Final" priority="50000"><![CDATA[
      ~ If we're disabled, do nothing
      doneif (tagis[Helper.SpcDisable] <> 0)

      #situational[hero.childfound[skDisguise],"+2 racial bonus to impersonate a human.",field[name].text]]]></eval>
    </thing>
  <thing id="raS2NoDrea" name="No Dreams" description="Kalashtar sleep but they do not dream. As such, they have immunity to the {i}dream{/i} and {i}nightmare{/i} spells, as well as any other effect that relies on the target&apos;s ability to dream." compset="RaceSpec" summary="Immunity to the {i}dream{/i} and {i}nightmare{/i} spells">
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="SpecType" tag="Defense"/>
    </thing>
  <thing id="raS2NatPsi" name="Naturally Psionic" description="Gain 1 extra power point per character level, regardless of whether you choose a psionic class.\n\n{B}Note:{/b} This ability works with {i}Ultimate Psionics{/i} that can be found in the Community 3PP Pack." compset="RaceSpec">
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="AbilType" tag="PsiLike"/>
    <eval phase="PostLevel" priority="20000"><![CDATA[
      ~if we've been replaced, get out now
      doneif (tagis[Helper.SpcReplace] <> 0)

      ~ give level bonus to Pisonics Power Points Max value
      #resmax[resPowerPt] += #totallevelcount[]]]></eval>
    </thing>
  <thing id="raS2Mindli" name="Mindlink" description="Psi-Like Abilities: {i}Mindlink{/i} (1/day){i}.{/i} This ability is like the power manifested by a wilder of 1/2 the kalashtar&apos;s Hit Dice (minimum 1st level).\n\nIf you are not using the {i}Ultimate Psionics{/i} in your game, use this description of the {i}mindlink{/i} power: You forge a telepathic bond with another creature within 30 feet, which must have an Intelligence score of 3 or higher. The bond can be established only with a willing subject, who therefore receives no saving throw and gains no benefit from spell resistance.\n\nYou can communicate telepathically through the bond even if you do not share a common language.\n\nNo special power or influence is established as a result of the bond. Once the bond is formed, it works over any distance (although not from one plane to another), but only lasts for 1 round per character level. This is a mind-affecting ability." compset="RaceSpec">
    <fieldval field="trkMax" value="1"/>
    <tag group="AbilType" tag="PsiLike"/>
    <tag group="User" tag="Tracker"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="Usage" tag="Day"/>
    </thing>
