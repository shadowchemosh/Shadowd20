  <thing id="rauETChanN" name="Channel Negative Energy" description="Eldran Tesh can channel negative energy as a 14th-level cleric." compset="RaceSpec">
    <fieldval field="abDC" value="3"/>
    <fieldval field="trkMax" value="5"/>
    <tag group="StandardDC" tag="aCHA"/>
    <tag group="Usage" tag="Day"/>
    <tag group="User" tag="Tracker"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <tag group="SpecType" tag="Attack"/>
    <eval phase="Final" priority="10000"><![CDATA[
      perform hero.assign[Hero.Channel]

      ~ store number of hit dice in abValue
      field[abValue].value = hero.tagcount[Hero.HitDice]

      field[livename].text = "Channel Negative Energy"

      ~we do 1d6 per 2 effective levels + 1
      field[abValue2].value += round(field[abValue].value / 2,0,1)

      ~append the damage to the name
      field[livename].text &= " " & field[abValue2].value & "d6"]]></eval>
    <eval phase="Final" priority="10001" index="2">
      var n as number
      n = 3 + hero.child[aCHA].field[aModBonus].value
      field[trkMax].value = maximum(n,1)</eval>
    </thing>
