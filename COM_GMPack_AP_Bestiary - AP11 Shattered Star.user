    <tag group="ProductId" tag="HLCommunit"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="SpecType" tag="Attack"/>
    </thing>
  <thing id="rauPolPutA" name="Putrefying Aura" description="All unattended nonmagical food or liquid within the radius of a polevik&apos;s aura instantly rots or spoils. Attended nonmagical food or liquid within the aura receives a saving throw to resist this effect. The save DC is Constitution-based." compset="RaceSpec">
    <usesource source="PathShStar"/>
    <tag group="SpecType" tag="Aura"/>
    <tag group="AbilType" tag="Super"/>
    <tag group="StandardDC" tag="aCON"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <tag group="Helper" tag="ShowSpec"/>
    <eval phase="Final" priority="10000"><![CDATA[
      ~if nothing else has set the area, assume 30'
      if (field[abValue].value + tagmax[Value.?] = 0) then
        field[abValue].value = 30
        endif

      call CalcValue

      ~ Use our value field as the range of our aura
      field[livename].text = field[name].text & " (" & field[abValue].value & " ft.)"]]></eval>
    </thing>
