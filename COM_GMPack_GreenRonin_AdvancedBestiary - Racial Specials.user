  <thing id="raABCvClaw" name="Claw Attacks" description="Gain a claw attack if you didn&apos;t already have a natural attack" compset="RaceSpec" summary="Gain a claw attack if you didn&apos;t already have a natural attack">
    <tag group="SpecType" tag="Attack"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <eval phase="PreLevel" priority="999"><![CDATA[
var searchexp as string
var found as number
searchexp = "(wGroup.Natural & !SpecSource.tmABCaveCr)"
found = 0

~search for existence of any Natural attack from another source
foreach pick in hero from BaseWep where searchexp
  found += 1
nexteach
if (found > 0) then
  perform delete[Helper.ShowSpec]
  perform assign[Helper.SpcDisable]
else
  var valtag as string
  searchexp = "(thingid.wClaw & SpecSource.tmABCaveCr)"
  foreach pick in hero from BaseWep where searchexp
    valtag = "Value." & herofield[tNumHands].value
    perform eachpick.delete[Value.?]
    perform eachpick.assignstr[valtag]
  nexteach
  done
endif

~if we're still here, then search for OUR Claw attack and Hide it
searchexp = "(thingid.wClaw & SpecSource.tmABCaveCr)"
foreach pick in hero from BaseWep where searchexp
  perform eachpick.assign[Hide.Weapon]
nexteach]]></eval>
    <eval phase="PreLevel" priority="2000" index="3"><![CDATA[
doneif (tagis[Helper.ShowSpec] = 0)

if (field[usrIsCheck].value <> 1) then
  foreach pick in hero from BaseWep where "thingid.wGore"
    perform eachpick.assign[Helper.NatOverSec]
  nexteach
endif]]></eval>
    </thing>
