    <tag group="AbilType" tag="Extra"/>
    <tag group="ProductId" tag="HLCommunit"/>
    </thing>
  <thing id="rauWarMEnA" name="Enlarged Attacks" description="Each of a war machine&apos;s natural attacks deals damage as though the war machine were two size categories larger than it is. Furthermore, the war machine can wield weapons up to two size categories larger than the base creature could without taking penalties." compset="RaceSpec">
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="SpecType" tag="Attack"/>
    <tag group="AbilType" tag="Extra"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <eval phase="First" index="2">~ up natural attacks by two size catagories
      foreach pick in hero from BaseNatWep
        perform eachpick.assign[Helper.DamageUp]
        perform eachpick.assign[Helper.DamageUp]
        nexteach</eval>
    <eval phase="PostAttr" priority="10000"><![CDATA[
~ for weapons of size catagories one to two times larger we have to get a bit creative
~ check for weapons whose size difference is 2 or larger and shift the penalty down two
      foreach pick in hero from BaseWep where "!component.BaseNatWep"
       if (eachpick.field[gSizeDiff].value = 1) then
         eachpick.field[wAttack].value += 2
         eachpick.field[wRanAtk].value += 2
       elseif (eachpick.field[gSizeDiff].value >= 2) then
         eachpick.field[wAttack].value += 4
         eachpick.field[wRanAtk].value += 4
       endif
      if (eachpick.field[gSizeDiff].value >= 0) then
       if (eachpick.field[gSizeDiff].value <= 2) then
         eachpick.field[wClass].value -= eachpick.field[gSizeDiff].value
       else
         eachpick.field[wClass].value -= 1
       endif
      endif
        nexteach]]></eval>
    </thing>
