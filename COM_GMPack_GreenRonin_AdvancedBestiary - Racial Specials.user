  <thing id="rauCrSwHvM" name="Hive Mind" description="If the base creature has an Intelligence score of 3 or higher, the creature swarm has a hive mind. So long as it has at least 1 hit point per HD, it retains its Intelligence score, but if its hit points fall below that number, it becomes mindless. As a mindless creature, it becomes immune to mind-affecting effects." compset="RaceSpec">
    <tag group="AbilType" tag="Extra" name="Extraordinary Ability" abbrev=" (Ex)"/>
    <tag group="Helper" tag="ShowSpec" name="ShowSpec" abbrev="ShowSpec"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <bootstrap thing="xImmMind"></bootstrap>
    <eval phase="Validation" priority="9999" index="2"><![CDATA[
var hd as number
hd = hero.tagcount[Hero.HitDice]
var mindless as number
mindless = 0

if (hero.child[aINT].field[aFinalVal].value < 3) then
  mindless = 1
elseif (herofield[tCurrentHP].value < hd) then
  mindless = 1
endif

if (mindless = 1) then
  perform assign[Helper.SpcDisable]
  perform assign[Hide.Special]
else
  perform hero.childfound[xImmMind].assign[Helper.SpcDisable]
  perform hero.childfound[xImmMind].assign[Hide.Special]
endif]]></eval>
    </thing>
