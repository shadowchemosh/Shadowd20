  <thing id="raABBrmGor" name="Gore Attack" description="Gain a gore attack if you didn&apos;t already have one" compset="RaceSpec" summary="Gain a gore attack if you didn&apos;t already have one">
    <tag group="SpecType" tag="Attack"/>
    <tag group="Helper" tag="ShowSpec"/>
    <tag group="ProductId" tag="HLCommunit"/>
    <eval phase="PreLevel" priority="1000" index="2"><![CDATA[
doneif (tagis[Helper.ShowSpec] = 0)

var searchexp as string
searchexp = "(wGroup.Natural & !thingid.wGore)"

~search for existence of Natural weapons
foreach pick in hero from BaseWep where searchexp
  this.field[usrChkText].text = "Primary attack"
nexteach]]></eval>
    <eval phase="PreLevel" priority="999"><![CDATA[
var searchexp as string
var found as number
searchexp = "(thingid.wGore & !SpecSource.tmABBrmble)"
found = 0

~search for existence of Gore attack from another source
foreach pick in hero from BaseWep where searchexp
  found += 1
nexteach
if (found > 0) then
  perform delete[Helper.ShowSpec]
  perform assign[Helper.SpcDisable]
else
  done
endif

~now search for OUR Gore attack and Hide it
searchexp = "(thingid.wGore & SpecSource.tmABBrmble)"
foreach pick in hero from BaseWep where searchexp
  perform eachpick.assign[Hide.Weapon]
nexteach]]></eval>
    <eval phase="PreLevel" priority="2000" index="3"><![CDATA[
doneif (tagis[Helper.ShowSpec] = 0)

if (field[usrIsCheck].value <> 1) then
  foreach pick in hero from BaseWep where "thingid.wGore"
    perform eachpick.assign[Helper.NatOverSec]
  nexteach
endif]]></eval>
    </thing>
  <thing id="raABBrmEnt" name="Entangle" description="A bramble can use entangle (caster level equals bramble&apos;s character level) once per day, plus one additional time per day for each 5 character levels the bramble possesses.  This ability functions like the spell of the same name, except that it affects only thorns and burr-bearing plants.  A bramble is immune to the effects of its own entangle." compset="RaceSpec">
